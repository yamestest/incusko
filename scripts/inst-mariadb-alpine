#!/bin/sh

# 游녻 Heslo pre u쮂셨ate쬬 wpuser (m칪쬰코 zada콘 ako parameter)
DB_PASS="${1:-wp123}"

apk update
apk add mariadb mariadb-client openrc

# 游댢 Inicializ치cia OpenRC a MariaDB
touch /run/openrc/softlevel
mysql_install_db --user=mysql --datadir=/var/lib/mysql
rc-service mariadb start
rc-update add mariadb default

# 游 Vytvor len glob치lneho pou쮂셨ate쬬 wpuser (쬴adna datab치za!)
mysql -uroot -e "
CREATE USER 'wpuser'@'%' IDENTIFIED BY '${DB_PASS}';
GRANT ALL PRIVILEGES ON *.* TO 'wpuser'@'%';
FLUSH PRIVILEGES;"
